{
    "python.jediEnabled": true, // do: `pip install jedi>=0.17.0` globally
    "python.jediPath": "~/miniconda3/lib/python3.8/site-packages", // for path see: `pip show jedi`
    // "python.jediEnabled": false, // to use MPLS (Microsoft Python Language Server) instead of Jedi
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".git/"],
            "filetypes": ["go"]
        }
    },
    "java.configuration.runtimes": [
        {
            "name": "OpenJDK-1.8.0_265",
            "path": "/usr/lib/jvm/java-8-openjdk-amd64/"
        }
    ],
    "coc.preferences.formatOnSaveFiletypes": [
        // "html",
        // "css",
        // "javascript",
        // "Markdown"
    ]
}
